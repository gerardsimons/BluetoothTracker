<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.simons.bletracker" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:name=".BLETrackerApplication"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.OrderListActivity"
            android:label="@string/title_activity_order_list" >
        </activity>
        <activity
            android:name=".activities.LabelsListActivity"
            android:label="@string/title_activity_labels_list" >
        </activity>
    </application>

</manifest>
