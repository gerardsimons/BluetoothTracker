<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.simons.bletracker"
    android:versionCode="2"
    android:versionName="1.01">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!--<uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />-->

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <application
        android:name=".BLETrackerApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.OrderListActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_order_list"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.LabelsListActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_labels_list"
            android:screenOrientation="portrait" >
        </activity>

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyA2xGQaePRVdxioiVEBEqGEeGxi9plz1gE" />

        <service
            android:name=".services.LocationService"
            android:enabled="true"
            android:exported="true" >
        </service>
        <service
            android:name=".services.BLEDiscoveryService"
            android:enabled="true" />

        <activity
            android:name=".activities.ScanLabelActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_scan_label"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.MapActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_map"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.ConfigurationActivity"
            android:label="@string/title_activity_configuration" >
        </activity>
    </application>

</manifest>
