<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.simons.bletracker.activities.ConfigurationActivity">
    <TableRow
        android:layout_width="fill_parent"
        >
        <TextView
            android:text="GPS Displacement"
            android:gravity="center"

            />
        <EditText
            android:layout_height="match_parent"
            android:id="@+id/gpsDisplacementEditText"
            android:layout_width="100dp"
            android:inputType="number"
            android:layout_gravity="right">
        </EditText>
    </TableRow>
    <TableRow
        android:layout_width="fill_parent">
        <TextView
            android:text="GPS Update Interval"
            android:gravity="center"
            android:layout_height="200dp"
            />
        <EditText
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:id="@+id/gpsUpdateIntervalEditText"
            ></EditText>
    </TableRow>
    <TableRow
        android:layout_width="fill_parent">
        <TextView
            android:text="GPS Fastest Interval"
            android:gravity="center"
            android:layout_height="50dp"
            />
        <EditText
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:id="@+id/gpsFastestIntervalEditText">
        </EditText>
    </TableRow>
    <TableRow
        android:layout_width="fill_parent">
        <TextView
            android:text="Depart Distance Trigger"
            android:gravity="center"
            android:layout_height="50dp"
            />
        <EditText
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:id="@+id/departDistanceTriggerEditText">
        </EditText>
    </TableRow>
    <TableRow
        android:layout_width="fill_parent">
        <TextView
            android:text="Tracker Cache Size"
            android:gravity="center"
            android:layout_height="50dp"
            />
        <EditText
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:id="@+id/trackerCacheSizeEditText">
        </EditText>
    </TableRow>
    <TableRow
        android:layout_width="fill_parent">
        <TextView
            android:text="Arrive Distance Trigger"
            android:gravity="center"
            android:layout_height="50dp"
            />
        <EditText
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:id="@+id/arriveDistanceTriggerEditText">
        </EditText>
    </TableRow>
    <TableRow
        android:layout_width="fill_parent">
        <TextView
            android:text="RSSI Discovery Interval"
            android:gravity="center"
            android:layout_height="50dp"
            />
        <EditText
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:id="@+id/rssiDiscoveryIntervalEditText">
        </EditText>
    </TableRow>
</TableLayout>
</ScrollView>
