<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <TextView
        android:text="Current State:"
        android:id="@+id/currentStateTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/marginStyle"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/currentStateTxt">
            <TextView
                android:id="@+id/caseLabel"
                android:text="Case:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:text="Case"
                android:id="@+id/caseValueText"
                android:layout_toRightOf="@id/caseLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/currentStateTxt"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/marginStyle"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/currentStateTxt">
            <TextView
                android:id="@+id/userLabel"
                android:text="User:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:text="Username"
                android:layout_toRightOf="@id/userLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/currentStateTxt"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </LinearLayout>
        <Button
            style="@style/marginStyle"
            android:id="@+id/scanLabelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan Label"/>
        <Button
            style="@style/marginStyle"
            android:id="@+id/scanCaseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan Case"/>
        <Button
            style="@style/marginStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelsButton"
            android:text="Labels"/>
    </LinearLayout>
</RelativeLayout>
