<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State:" />
        <TextView
            android:id="@+id/currentStateTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STATE" />
        </LinearLayout>
        <LinearLayout
            style="@style/marginStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/currentStateTxt"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/caseLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Case:" />
            <TextView
                android:id="@+id/caseValueText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/currentStateTxt"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/caseLabel"
                android:text="Case" />
        </LinearLayout>
        <LinearLayout
            style="@style/marginStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tagLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tag: " />

            <TextView
                android:id="@+id/bleTagText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/currentStateTxt"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/caseLabel"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            style="@style/marginStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/currentStateTxt"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/userLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User:" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/currentStateTxt"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/userLabel"
                android:text="Username" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/scanCaseButton"
                style="@style/marginStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan Case" />
            <Button
                android:id="@+id/scanLabelButton"
                style="@style/marginStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan Label" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/labelsButton"
                style="@style/marginStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Labels" />
            <Button android:id="@+id/mapButton"
                style="@style/marginStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Map"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/testButtons"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/testOrderCaseButton"
                style="@style/marginStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OrderCase" />
            <Button
                android:id="@+id/testGpsMovement"
                style="@style/marginStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Move GPS" />
            <Button
                android:id="@+id/testDepartButton"
                style="@style/marginStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Depart" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
