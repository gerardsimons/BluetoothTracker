<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="1"
        android:orientation="horizontal">
        <TableRow>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/calibrationLimitSettings"
            android:textSize="12sp"
            android:layout_weight="0.25"
            android:text="Calibration"/>
        <Button
            android:id="@+id/fragmentsNumberSettings"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="0.25"
            android:textSize="12sp"
            android:text="Fragments" />
        </TableRow>
        <TableRow>
        <Button
            android:id="@+id/maxValuesSizeSettings"
            android:layout_width="wrap_content"
            android:layout_weight="0.25"
            android:layout_height="50dp"
            android:textSize="12sp"
            android:text="Values" />
        <Button
            android:id="@+id/btRefreshRateSettings"
            android:layout_width="wrap_content"
            android:layout_weight="0.25"
            android:layout_height="50dp"
            android:textSize="12sp"
            android:text="Refresh Rate" />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/pointerWidthSettings"
                android:layout_width="wrap_content"
                android:layout_weight="0.25"
                android:layout_height="50dp"
                android:textSize="12sp"
                android:text="Pointer Width" />
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Colors"
        android:id="@+id/showColorsSwitch"
        android:checked="false" />
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Pointer"
        android:id="@+id/showPointerSwitch"
        android:checked="false" />
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Debug Text"
        android:id="@+id/showDebugTextSwtich"
        android:checked="false" />
    </LinearLayout>
</LinearLayout><!-- From: file:/Users/gerardsimons/Git/BluetoothTracker/android/res/layout/settings.xml -->